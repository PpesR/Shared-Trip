<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_grey">

    <include
        android:id="@+id/user_header_part"
        layout="@layout/temp_user_header"
        android:layout_width="match_parent"
        android:layout_height="53dp" />

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/tools"
            android:id="@+id/result_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <SearchView
                android:id="@+id/searchView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="61dp" />

            <TextView
                android:id="@+id/nearYouText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/horizontalScrollViewNearYou"
                android:layout_alignRight="@+id/horizontalScrollViewNearYou"
                android:layout_below="@+id/searchView"
                android:layout_marginEnd="182dp"
                android:layout_marginRight="182dp"
                android:layout_marginTop="6dp"
                android:ems="10"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingStart="6dp"
                android:text="@string/browse_events_happening_near_you" />

            <HorizontalScrollView
                android:id="@+id/horizontalScrollViewNearYou"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/nearYouText"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="6dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/eventResults"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="6dp"
                        android:scrollbars="horizontal"
                        card_view:cardCornerRadius="4dp"
                        card_view:cardElevation="4dp"
                        card_view:cardUseCompatPadding="true" />

                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:id="@+id/notNearYou"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/horizontalScrollViewNearYou"
                android:layout_marginEnd="182dp"
                android:layout_marginRight="182dp"
                android:layout_marginTop="6dp"
                android:ems="10"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingStart="6dp"
                android:text="@string/todo" />

            <HorizontalScrollView
                android:id="@+id/horizontalScrollViewOther"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@+id/notNearYou"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="6dp">

            </HorizontalScrollView>
        </RelativeLayout>
    </ScrollView>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/result_content"
        android:layout_gravity="bottom"
        app:itemIconTint="@drawable/selector_bottombar_item"
        app:itemTextColor="@drawable/selector_bottombar_item"
        app:menu="@menu/bottombar_menu" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/add_event_fbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="@dimen/add_event_fbutton_marginbottom"
        android:layout_marginEnd="@dimen/add_event_fbutton_margin"
        android:layout_marginRight="@dimen/add_event_fbutton_margin"
        android:src="@drawable/ic_add_white_24px"
        app:backgroundTint="@color/orangered"
        app:layout_anchor="@id/result_content"
        app:layout_anchorGravity="bottom|end" />
</android.support.design.widget.CoordinatorLayout>

