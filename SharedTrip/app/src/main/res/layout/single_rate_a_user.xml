<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
        <include layout="@layout/user_pic_and_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/rate_user_event_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="16sp"
            android:layout_gravity="center_vertical"
            android:text="event name"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginRight="20dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <ImageButton
        android:id="@+id/rate_user_thumbs_up"
        android:layout_margin="10dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:tint="@color/light_gray"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_thumb_up_black_36dp"/>
    <ImageButton
        android:id="@+id/rate_user_thumbs_down"
        android:layout_margin="10dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_thumb_down_black_36dp"
        android:tint="@color/light_gray"/>
    <ImageButton
        android:id="@+id/rate_user_favorite"
        android:layout_margin="10dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_favorite_black_36dp"
        android:tint="@color/light_gray"/>
    <ImageButton
        android:id="@+id/rate_user_smiley"
        android:layout_margin="10dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_sentiment_very_satisfied_black_36dp"
        android:tint="@color/light_gray"/>
    </LinearLayout>
</LinearLayout>