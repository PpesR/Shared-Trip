<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:layout_margin="5dp"
    android:background="@color/background_grey"
    android:gravity="center_horizontal">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/friend_event_picture"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        android:alpha="0.8"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_alignTop="@id/friend_event_picture"
        android:layout_centerHorizontal="true"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:id="@+id/friend_event_profile_picture"
        android:layout_marginTop="100dp"/>

    <TextView
        android:maxLines="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/friend_event_user_name"
        android:layout_below="@id/friend_event_profile_picture"
        android:layout_marginTop="5dp"
        android:textSize="14sp"
        android:textAlignment="center"
        android:text="@string/name_placeholder"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/friend_event_trip_name"
        android:layout_below="@id/friend_event_user_name"
        android:layout_marginTop="5dp"
        android:textSize="18sp"
        android:text="Event Name"
        android:textAlignment="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/friend_event_location"
        android:layout_below="@id/friend_event_trip_name"
        android:layout_marginTop="5dp"
        android:textSize="11sp"
        android:layout_centerHorizontal="true"
        android:drawableTint="@color/button_grey"
        android:drawableLeft="@drawable/ic_place_black_24dp"
        android:text="location"/>
</RelativeLayout>